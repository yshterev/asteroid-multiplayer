{
  "defaultSeverity": "off",
  "rulesDirectory": ["./"],
  "rules": {
    "max-line-length": [true, 180],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [true, 1],
    "no-console": [true, "debug", "log", "time", "timeEnd", "trace"]
  },
  "jsRules": {
    "max-line-length": [true, 180]
  },
  "extends": ["tslint:latest", "tslint-config-prettier"]
}
